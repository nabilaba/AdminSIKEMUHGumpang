{
    "version": 2,
    "builds": [
      {
        "src": "backend/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "redirects": [
      {
        "source": "/frontend(.*)",
        "destination": "/"
      }
    ],
    "rewrites": [
      {
        "source": "/api(.*)",
        "destination": "backend/index.js"
      },
      {
        "source": "/",
        "destination": "frontend/index.html"
      },
      {
        "source": "/(.+)",
        "destination": "frontend/$1"
      },
      {
        "source": "/(.*)",
        "destination": "frontend/index.html"
      }
    ]
  }
  